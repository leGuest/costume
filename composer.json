    "php": ">=5.4.0",
    "silex/silex": "~1.1",
    "twig/twig" : "1.15.*@dev",
    "symfony/twig-bridge" : "~2.1"
  },
  "require-dev": {
    "behat/behat": "2.5.*@stable",
    "behat/mink": "*",
